FROM scratch

USER 65532:65532
COPY charts ./charts
COPY registry ./registry
ENV NAME=postgresql
ENV NAMESPACE=sealos
ENV HOST=postgresql
ENV USERNAME=adm1n
ENV PASSWORD=passw0rd
ENV STORAGE_CLASS=local-hostpath
ENV STORAGE_SIZE=1G
ENV STORAGE_CLASS_CREATE=false
CMD [ "kubectl create namespace $(NAMESPACE)", "helm install NAME ./charts/postgresql --namespace $(NAMESPACE) --set username=$(USERNAME),password=$(PASSWORD),storage.createClass=$(STORAGE_CLASS_CREATE),storage.class=$(STORAGE_CLASS),storage.size=$(STORAGE_SIZE),service.name=$(HOST)" ]
